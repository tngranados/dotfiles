	email = toni@tngranados.com
	signingKey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIFkkN7Sposqabq6SUgcxoc/UEH6dcifoTkEFN1WacbhG
[init]
	defaultBranch = main
[core]
	pager = "delta --syntax-theme $(defaults read -globalDomain AppleInterfaceStyle &> /dev/null && echo Coldark-Dark || echo GitHub)"
	attributesfile = ~/.gitattributes
	excludesfile = ~/dotfiles/globalgitignore
	hooksPath = ~/dotfiles/git-hooks
[interactive]
	diffFilter = "delta --color-only --syntax-theme $(defaults read -globalDomain AppleInterfaceStyle &> /dev/null && echo Coldark-Dark || echo GitHub)"
	singlekey = true
[add.interactive]
    useBuiltin = false
[color]
	ui = true
[delta]
    navigate = true
    line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
		tool = difftastic
[difftool]
		prompt = false
[difftool "difftastic"]
		cmd = difft "$LOCAL" "$REMOTE"
[alias]
	s = status --short
	ss = status
	d = diff
	co = checkout
	br = branch
	last = log -1 HEAD
	cane = commit --amend --no-edit
	lo = log --branches --remotes --tags --graph --oneline --decorate
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	pr = pull --rebase
	rh = reset --hard
	rs = reset --soft
	rc = rebase --continue
	mc = merge --continue
	cm = commit -m
	pick = cherry-pick
	a = add .
	# Use fzf to start an interactive rebase
	frbi = "!f() { git rebase -i $(git log --pretty=oneline --color=always | fzf --ansi | cut -d ' ' -f1)^ ; }; f; unset f"
	recent = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\"
	smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%C(cyan)%s%n%Creset'
	uncommit = reset --soft HEAD^
	unstage = reset HEAD --
	revertfile = checkout --
	ap = add -p
	rp = reset -p
	rmp = restore -p
[credential]
	helper = osxkeychain
[fetch]
	prune = true
[diff "ecmascript"]
	xfuncname = "^((.*function.*)|([ \t]+it\\(.*))$"
[diff "pdf"]
	textconv = pdftotext-stdout
[pull]
	ff = only
[includeIf "gitdir:~/Developer/work/"]
	path = ~/Developer/work/.gitconfig
[rerere]
	enabled = true
[commit]
	gpgSign = true
[gpg]
	format = ssh
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[push]
	autoSetupRemote = true
